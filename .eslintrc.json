{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "parser": "@babel/eslint-parser"
    },
    "rules": {
        "prettier/prettier": ["error", {
            "endOfLine": "auto"
        }],
        "vue/multi-word-component-names": "off",
        "vue/comment-directive": "off",
        "vue/no-deprecated-filter" : "off"
    }
}